---
import ContentSection from "~/components/content-section.astro";
import ExpoCard from "~/components/expo-card.astro";
import sites from "~/data/expo/sites.json";
---

<ContentSection title="Expo" id="expo">
  <Fragment slot="lead">
    Watheia is <span class="text-primary">versatile</span>.{" "}
    <span class="text-primary">Explore</span> what's possible and get{" "}
    <span class="text-primary">inspired</span>.
  </Fragment>
  <div class="max-w-6xl space-y-2">
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
      {
        sites.map(({ title, image, url }) => (
          <ExpoCard title={title} image={image} url={url} />
        ))
      }
    </div>
    <p class="text-sm text-right">
      <a class="text-primary" href="/expo/"> ...and more &rarr;</a>
    </p>
  </div>
</ContentSection>
